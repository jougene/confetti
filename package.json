{
  "name": "confidog",
  "version": "0.3.2",
  "description": "Cascade config loader for typescript from different config providers",
  "author": "Eugene Sinitsyn",
  "keywords": [
    "config",
    "configuration",
    "typescript"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/jougene/confidog"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"{src,samples,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,samples,test}/**/*.ts\" --fix",
    "test": "jest"
  },
  "dependencies": {
    "class-validator": "^0.12.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^26.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
